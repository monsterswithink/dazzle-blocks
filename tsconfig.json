{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
        "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "#styles": ["./app/globals.css"],
      "@components/*": ["./components/*"],
      "@resume-tools/*": ["./components/resume-tools/*"],
      "@resume-blocks/*": ["./components/resume-blocks/*"],
      "@ui/*": ["./components/ui/*"],
      "@lib/*": ["./lib/*"],
      "@hooks/*": ["./hooks/*"],
      "@public/*": ["./public/*"],
      "@scripts/*": ["./scripts/*"],
      "@utils/*": ["./utils/*"],
      "@id/*": ["./app/resume/[id]/*"],
      "@types/*": ["./types/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
